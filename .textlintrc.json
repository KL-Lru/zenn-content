{
  "plugins": {},
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "periodMark": ".",
        "allowPeriodMarks": [
          ":"
        ]
      },
      "no-exclamation-question-mark": false
    },
    "textlint-rule-ja-space-between-half-and-full-width": {
      "space": "always"
    },
    "prh": {
      "rulePaths": ["./prh.yml"]
    }
  }
}
